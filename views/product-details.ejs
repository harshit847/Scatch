<%- include('./partials/header') %>

<div class="w-full h-screen flex justify-center items-center">
  <div class="w-[60%] flex gap-10">
    <div class="w-1/2 bg-[<%= product.bgcolor %>] flex items-center justify-center">
      <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" class="h-[20rem]">
    </div>
    <div class="w-1/2 flex flex-col gap-4">
      <h1 class="text-3xl font-bold"><%= product.name %></h1>
      <p class="text-lg text-gray-600">Lorem ipsum dolor sit amet consectetur adipisicing elit. Exercitationem officiis maxime quasi ullam aperiam quas hic magnam impedit molestiae consequatur esse nulla illum vel quod iure dolore quam, deleniti cumque!</p>
      <div class="flex items-center gap-5">
        <h2 class="text-xl line-through text-red-400">$ <%= product.price %></h2>
        <h2 class="text-2xl text-green-600">$ <%= product.discount %></h2>
      </div>
      <form action="/addtocart/<%= product._id %>" method="GET">
        <button class="bg-black text-white px-5 py-2 mt-4">Add to Cart</button>
      </form>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
