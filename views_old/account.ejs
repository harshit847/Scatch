<%- include('./partials/header') %>

  <div class="w-full min-h-screen flex flex-col items-center justify-center bg-gray-50 px-4">
    <div class="bg-white rounded-2xl shadow-lg p-8 max-w-md w-full text-center">
      <div class="text-purple-600 text-5xl mb-4">
        <i class="fas fa-user-circle"></i>
      </div>

      <h1 class="text-2xl font-semibold mb-6">ğŸ‘¤ Account Details</h1>

      <div class="text-gray-700 text-left mb-6 space-y-2">
        <p><strong>Name:</strong>
          <%= user.fullname %>
        </p>
        <p><strong>Email:</strong>
          <%= user.email %>
        </p>
        <p><strong>Mobile Number:</strong>
          <%= user.contact %>
        </p>
        <p><strong>Saved Address:</strong> <%= user.address || 'Not provided yet' %></p>
        <form action="/account/address" method="POST">
          <label for="address"><strong>Update Address:</strong></label>
          <input type="text" name="address" id="address" required placeholder="Enter your address" />
          <button type="submit" class="mt-1 bg-green-400 text-white px-2 py-1 rounded hover:bg-green-600 transition">Save Address</button>
        </form>        
      </div>

      <a href="/logout" class="inline-block bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 transition">
        Logout
      </a>
    </div>
  </div>

  <%- include('./partials/footer') %>